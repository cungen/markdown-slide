{
    "name": "markdown-slide",
    "displayName": "%displayName%",
    "description": "%description%",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown",
        "onCommand:markdown-slide.openPreviewToTheSide"
    ],
    "publisher": "cungen",
    "main": "./out/extension.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cungen/markdown-slide.git"
    },
    "icon": "images/logo.png",
    "contributes": {
        "commands": [
            {
                "command": "markdown-slide.openPreviewToTheSide",
                "title": "%markdown-slide.openPreviewToTheSide.title%",
                "category": "Markdown",
                "icon": {
                    "light": "./media/preview-right-light.svg",
                    "dark": "./media/preview-right-dark.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == markdown",
                    "command": "markdown-slide.openPreviewToTheSide",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Markdown Slide",
            "properties": {
                "markdown-slide.liveUpdate": {
                    "description": "Re-render the preview as the contents of the source changes, without requiring the source buffer to be saved. If disabled, the preview is re-rendered only when the buffer is saved to disk.",
                    "default": true,
                    "type": "boolean"
                },
                "markdown-slide.singlePreview": {
                    "description": "Open Only One Preview.",
                    "default": true,
                    "type": "boolean"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "vite:watch": "vite build -w -m production",
        "vite:dev": "vite",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.65.0",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "@vicons/fa": "^0.12.0",
        "@vitejs/plugin-vue": "^2.2.4",
        "@vscode/test-electron": "^2.1.2",
        "eslint": "^8.9.0",
        "glob": "^7.2.0",
        "hast-util-to-html": "^8.0.3",
        "highlight.js": "^11.5.0",
        "markdown-ast-to-tree": "^1.0.0",
        "mdast-util-from-markdown": "^1.2.0",
        "mdast-util-to-hast": "^12.1.1",
        "mocha": "^9.2.1",
        "naive-ui": "^2.26.4",
        "sass": "^1.49.9",
        "typescript": "^4.5.5",
        "vfonts": "^0.0.3",
        "vite": "^2.8.6",
        "vue": "^3.2.31",
        "vue-tsc": "^0.32.1"
    },
    "dependencies": {
        "lodash": "^4.17.21"
    }
}
